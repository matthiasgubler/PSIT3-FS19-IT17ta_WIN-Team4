         <Blend />
      </effect>
   </Label>
   <ComboBox fx:id="developmentRatingComboBox" layoutX="14.0" layoutY="100.0" prefHeight="25.0" prefWidth="100.0" />
   <Label layoutX="134.0" layoutY="104.0" text="Mindestrating eines Skills" />
   <Label layoutX="134.0" layoutY="64.0" text="Mindestanzahl Mitarbeiter" />
   <ComboBox fx:id="employeeCountComboBox" layoutX="14.0" layoutY="60.0" prefHeight="25.0" prefWidth="100.0" />
</AnchorPane>
