<AnchorPane prefHeight="380.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zhaw.ch.skill7.view.admin.AdminDevelopmentTableController">
   <TableView fx:id="tableView" editable="true" layoutY="177.0" prefHeight="200.0" prefWidth="600.0">
      <columns>
         <TableColumn editable="false" prefWidth="75.0" text="ID">
            <cellValueFactory>
               <PropertyValueFactory property="id" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn editable="false" prefWidth="450.0" text="Name Skill">
            <cellValueFactory>
               <PropertyValueFactory property="name" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn editable="false" prefWidth="75.0" text="Anz. MA">
            <cellValueFactory>
               <PropertyValueFactory property="count" />
            </cellValueFactory>
         </TableColumn>
      </columns>
      <items>
         <FXCollections fx:id="developmentSkillUIObservableList" fx:factory="observableArrayList" />
      </items>
   </TableView>
   <Label layoutX="14.0" layoutY="151.0" text="Liste der Skills für einen Workshop">
      <effect>
         <Blend />
      </effect></Label>
   <Label layoutX="14.0" layoutY="14.0" prefHeight="34.0" prefWidth="575.0" text="Hier werden Skills angezeigt, welche folgende Schwellenwerte erreichen. Zusätzlich kann pro Skill eine Liste der Mitarbeiter eingesehen werden, welche einen Weiterbildungswunsch auf diesen Skill eingetragen haben." wrapText="true">
